<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp"
    android:padding="5dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/dateRange"
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:background="@color/background"
            android:fontFamily="@font/muli_bold"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:textSize="20sp" />


        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/dateRange"
            android:layout_marginBottom="4dp"
            android:background="@color/background" />

        <LinearLayout
            android:id="@+id/lyt_expand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view2"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:weightSum="2">

                    <LinearLayout
                        android:id="@+id/adapter_student_homework_dateLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:weightSum="3">

                        <View
                            android:id="@+id/teacherLayout"
                            android:layout_width="60dp"
                            android:layout_height="16dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/background"
                            android:fontFamily="@font/muli_medium"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="60dp"
                            android:layout_height="16dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/background"
                            android:fontFamily="@font/muli_medium"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="60dp"
                            android:layout_height="16dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/background"
                            android:fontFamily="@font/muli_medium"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:orientation="vertical"
                        android:weightSum="3">

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="16dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/background"
                            android:fontFamily="@font/muli_medium"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="16dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/background"
                            android:fontFamily="@font/muli_medium"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="16dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/background"
                            android:fontFamily="@font/muli_medium"
                            android:textSize="14sp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/viewBTN"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:gravity="end">

                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:background="@color/background" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:layout_marginStart="5dp"
                        android:background="@color/background"
                        android:fontFamily="@font/muli_italic"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
